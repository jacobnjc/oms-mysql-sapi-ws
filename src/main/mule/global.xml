<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:tls="http://www.mulesoft.org/schema/mule/tls"
	xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns:secure-properties="http://www.mulesoft.org/schema/mule/secure-properties" xmlns:db="http://www.mulesoft.org/schema/mule/db"
	xmlns:api-gateway="http://www.mulesoft.org/schema/mule/api-gateway"
	xmlns="http://www.mulesoft.org/schema/mule/core" xmlns:doc="http://www.mulesoft.org/schema/mule/documentation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/tls http://www.mulesoft.org/schema/mule/tls/current/mule-tls.xsd 
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/api-gateway http://www.mulesoft.org/schema/mule/api-gateway/current/mule-api-gateway.xsd
http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd
http://www.mulesoft.org/schema/mule/secure-properties http://www.mulesoft.org/schema/mule/secure-properties/current/mule-secure-properties.xsd">
	<http:listener-config name="HttpsListenerConfig">
		<http:listener-connection host="0.0.0.0"
			port="8081" protocol="HTTPS">
			<tls:context>
				<tls:key-store type="pkcs12"
					path="certs/oms-mysql-sapi.p12" keyPassword="centi1234"
					password="centi1234" />
			</tls:context>

		</http:listener-connection>
	</http:listener-config>
	<!-- <api-gateway:autodiscovery apiId="20591876" ignoreBasePath="true" doc:name="API 
		Autodiscovery" doc:id="a774b65d-d34a-4521-8ebc-12177075b2ea" flowRef="oms-mysql-sapi-main" 
		/> -->
	<db:config name="SQLite_Database_Config"
		doc:name="Database Config"
		doc:id="f4cc52fb-03a4-4ba8-8a0f-66901fe22e71">
		<db:generic-connection url="${db.url}"
			driverClassName="${db.driver_class}" />
	</db:config>
	<configuration-properties
		doc:name="Configuration properties"
		doc:id="a32933dd-0bc0-45cc-9558-c214e72c9fd3"
		file="configurations\configs.yaml" />
	<secure-properties:config
		name="Secure_Properties_Config" doc:name="Secure Properties Config"
		doc:id="b918852e-0804-4829-8b54-781047694c55"
		file="configurations\secure.yaml" key="1234">
		<secure-properties:encrypt
			algorithm="Blowfish" />
	</secure-properties:config>
</mule>
